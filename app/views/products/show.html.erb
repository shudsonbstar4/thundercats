<div class="col-md-12">
  <h1><%= @product.name %></h1>
	<h3 class="product_price"><%= number_to_currency @product.unit_price %></h3>
	<div class="rectangle"></div>
	<p><b>Description:</b> <%= @product.description %></p>
	<p><b>Quantity:</b> <%= @product.quantity %></p>
	<p><b>Sku:</b> <%= @product.sku %></p>
  <p><b>Brand:</b> <%= @product.brand %></p>
	<p><b>Model num:</b> <%= @product.model_num %></p>
<p>
<button class="btn btn-success"><%= link_to 'Edit', edit_product_path(@product) %></button>&nbsp;
<button class="btn btn-info"><%= link_to 'Back', products_path %></button>
</p>
</div>
